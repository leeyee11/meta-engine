{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@meta-engine/action": ["./packages/meta-action/lib"],
      "@meta-engine/adapter": ["./packages/meta-adapter/lib"],
      "@meta-engine/flow": ["./packages/meta-flow/lib"],
      "@meta-engine/io": ["./packages/meta-io/lib"],
      "@meta-engine/sandbox": ["./packages/meta-sandbox/lib"],
      "@meta-engine/rule": ["./packages/meta-rule/lib"]
    }
  }
}
